@model List<DirectoryStructure.Models.Directory>

<h2>Catalogs</h2>


<ul>
    @foreach (var catalog in Model)
    {
        <li>
            <a href="@Url.Action("Details", "Directory", new { id = catalog.Id })">@catalog.Name</a>
            @if (catalog.Children.Any())
            {
                <ul>
                    @foreach (var child in catalog.Children)
                    {
                        <li>
                            <a href="@Url.Action("Details", "Directory", new { id = child.Id })">@child.Name</a>
                        </li>
                    }
                </ul>
            }
        </li>
    }
</ul>
